# WealthAdvisor AI — On-Premise Environment Template
# =====================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

IMAGE_TAG=1.0.0

# ── Application URLs ─────────────────────────────────────────────────────────
APP_URL=https://wealthai.internal
NEXT_PUBLIC_API_URL=https://wealthai.internal/api

# ── Session & Encryption ─────────────────────────────────────────────────────
# Generate: openssl rand -base64 32
SESSION_SECRET=REPLACE_WITH_STRONG_SECRET_32_CHARS
# Generate: python ml-service/src/security/encryption.py
ENCRYPTION_KEY=REPLACE_WITH_BASE64_AES256_KEY

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_PASSWORD=REPLACE_WITH_STRONG_REDIS_PASSWORD

# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_DB_PASSWORD

# ── Google OAuth (optional) ───────────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ── MSG91 SMS OTP ────────────────────────────────────────────────────────────
MSG91_AUTH_KEY=
MSG91_TEMPLATE_ID=
MSG91_TEMPLATE_2FA=

# ── Razorpay ─────────────────────────────────────────────────────────────────
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_PLAN_INDIVIDUAL=plan_individual_499
RAZORPAY_PLAN_BUSINESS=plan_business_1499
RAZORPAY_PLAN_CA=plan_ca_3999

# ── Admin ─────────────────────────────────────────────────────────────────────
# Generate: openssl rand -hex 32
ADMIN_API_KEY=REPLACE_WITH_STRONG_ADMIN_KEY

# ── DPDP / Compliance ─────────────────────────────────────────────────────────
GRIEVANCE_OFFICER_NAME=Data Protection Officer
GRIEVANCE_OFFICER_EMAIL=dpo@your-domain.in
GRIEVANCE_OFFICER_ADDR=Your Company, City, State — PINCODE

# ── Ollama (on-premise LLM) ───────────────────────────────────────────────────
OLLAMA_BASE_URL=http://ollama:11434
# Run after first start: docker exec wealthai_ollama ollama pull llama3.2:3b

# ── Session Security ─────────────────────────────────────────────────────────
SESSION_IP_BINDING=true
SESSION_IDLE_MS=1800000
SESSION_ABSOLUTE_MS=28800000
MAX_SESSIONS_PER_USER=5
