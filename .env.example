# =============================================================
# Wealth Recommendation Assistant - Environment Configuration
# Copy to .env and fill in actual values
# =============================================================

# ---- ML Service (Flask) ----
ML_SERVICE_PORT=5001
ML_SERVICE_HOST=0.0.0.0
FLASK_ENV=development
FLASK_DEBUG=0

# HuggingFace model for embeddings (no API key needed for local models)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# FAISS index storage path
FAISS_INDEX_PATH=./faiss_index

# Embedding cache directory
EMBEDDING_CACHE_PATH=./embedding_cache

# Conversational memory window (number of exchanges)
MEMORY_WINDOW_SIZE=5

# ---- API Gateway (Express) ----
API_GATEWAY_PORT=3001
ML_SERVICE_URL=http://ml-service:5001

# Session secret (use a strong random string in production)
SESSION_SECRET=your-session-secret-here-change-in-production

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS allowed origins
CORS_ORIGIN=http://localhost:3000

# ---- Frontend (Next.js) ----
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=WealthAdvisor AI

# ---- AWS (for Lambda deployment) ----
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id
S3_BUCKET_NAME=wealth-advisor-assets

# ---- OpenAI (optional - for LLM completions if not using local model) ----
# OPENAI_API_KEY=sk-...
